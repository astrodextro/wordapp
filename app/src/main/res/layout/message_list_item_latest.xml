<!-- Layout for message message list item for latest -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:background="@drawable/today_touch_selector"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="150dp"
        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LATEST MESSAGE"
            android:layout_marginLeft="16dp"
            android:layout_gravity="top"
            android:textColor="@color/white"
            android:background="@color/wordapp_orange"
            android:textStyle="bold|italic"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/list_item_preacher_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:transitionName="dex"/>

        <TextView
            android:id="@+id/list_item_preacher_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:layout_gravity="left|center_horizontal"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:maxLines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/list_item_title_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/list_item_date_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <TextView
                android:id="@+id/list_item_downloaded_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text=""
                android:textColor="@color/white"
                android:background="@color/wordapp_dark_orange"
                android:textAppearance="?android:textAppearanceSmall"/>
            <TextView
                android:id="@+id/list_item_price_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="N200"
                android:textColor="@color/white"
                android:background="@color/wordapp_dark_orange"
                android:textAppearance="?android:textAppearanceSmall"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>