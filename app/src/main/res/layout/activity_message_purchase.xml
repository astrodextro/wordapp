<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".PurchaseActivity">

    <TextView
        android:id="@+id/message"
        android:text="Are you sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <!--<ImageButton-->
            <!--android:id="@+id/paypal_button"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:src="@drawable/paypal"-->
            <!--android:scaleType="fitEnd"-->
            <!--android:background="#00000000"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:visibility="gone" />-->

        <Button
            android:id="@+id/airtime_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Airtime"
            android:scaleType="fitEnd"
            android:background="@color/wordapp_dark_orange"
            android:layout_marginRight="10dp"
            android:visibility="gone" />
        <Button
            android:id="@+id/paystack_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Paystack"
            android:scaleType="fitEnd"
            android:background="@color/wordapp_dark_orange"
            android:layout_marginRight="10dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/googleplay_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Google Play"
            android:src="@drawable/googleplay"
            android:scaleType="fitEnd"
            android:background="@color/wordapp_dark_orange"
            android:layout_marginRight="10dp" />
    </LinearLayout>

</FrameLayout>
